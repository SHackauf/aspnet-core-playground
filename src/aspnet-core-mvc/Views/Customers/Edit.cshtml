@model de.playground.aspnet.core.mvc.Models.CustomerModel


@{
    ViewData["Title"] = "Customer" + @Model.Name;
}

<div class="row">
    <div class="col">
        <h2>Customer</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col">
        <form asp-action="Edit">
            <div>
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label for="inputName" asp-for="Name"/>
                    <input id="inputName" asp-for="Name" class="form-control" placeholder="Enter name"/>
                    <span asp-validation-for="Name"></span>
                </div>

                <div>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-info" asp-action="Index" role="button">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-success btn-default" />
                    </div>
                </div>
            </div>
        </form>

        @*@section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }*@
        
    </div>
</div>
